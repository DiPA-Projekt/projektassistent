{
  "extends": "../../.eslintrc.js",
  "overrides": [
    {
      "files": ["*.ts"],
      "parserOptions": {
        "project": [
          "projects/projektassistent-frontend/tsconfig.app.json",
          "projects/projektassistent-frontend/tsconfig.spec.json",
          "projects/projektassistent-frontend/e2e/tsconfig.json"
        ],
        "createDefaultProgram": true
      },
      "rules": {
        "@angular-eslint/component-selector": [
          "error",
          {
            "type": "element",
            "prefix": "app",
            "style": "kebab-case"
          }
        ],
        "@angular-eslint/directive-selector": [
          "error",
          {
            "type": "attribute",
            "prefix": "app",
            "style": "camelCase"
          }
        ]
      }
    }
  ]
}
